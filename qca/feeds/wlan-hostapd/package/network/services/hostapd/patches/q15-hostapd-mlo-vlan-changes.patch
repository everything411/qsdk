@@ -563,7 +569,15 @@ static void vlan_put_bridge(const char *
 
 void vlan_dellink(const char *ifname, struct hostapd_data *hapd)
 {
-	struct hostapd_vlan *first, *prev, *vlan = hapd->conf->vlan;
