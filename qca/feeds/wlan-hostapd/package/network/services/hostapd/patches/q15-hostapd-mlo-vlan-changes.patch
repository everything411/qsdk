+
+	if (hapd->mld)
+		vlan_bss = hapd->mld->bss;
+	else
+		vlan_bss = hapd;
+
+	vlan = vlan_bss->conf->vlan;
 
 	wpa_printf(MSG_DEBUG, "VLAN: vlan_dellink(%s)", ifname);
 
